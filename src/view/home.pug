doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title VideoChat
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 VideoChat
        main
            div#myStream
                video#myFace(autoplay, playsinline, width="400", height="400")
                button#mute Mute
                button#camera Camera Turn Off
                select#videoInputs
            h3
            ul
            div#welcome
                form
                    input(type="text", placeholder="Room name", required)
                    button Enter Room
                h4 Open Rooms: 
                    ul
            div#room
                form#nickname
                    input(type="text", placeholder="Enter your nickname", required)
                    button Save
                form#msg
                    input(type="text", placeholder="Enter your message", required)
                    button Send

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")